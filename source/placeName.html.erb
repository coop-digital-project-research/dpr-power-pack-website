---
title: Power Pack <%= location_name %>
---

<div class="header">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h1 class="visually-hidden">Power Pack [placeName]</h1>
        <a href="/">
        <%= image_tag 'power-pack-logo.svg', class: 'power-pack-logo' %>
        </a>
        <span class="pack-name"><%= location_name %></span>
        <nav class="main-nav">
          <ul>
            <li><a href="about">About</a></li>
            <li><a href="how-it-works">How it works</a></li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>
<div class="strapline">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h2>Yay! There's already a pack in your area</h2>
      </div>
    </div>
  </div>
</div>

<div id='map'></div>

<div class="signup">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h1>Join <%= location_name %> Power Pack</h1>
        
          <!-- Begin MailChimp Signup Form -->
          <div id="mc_embed_signup">
          <form action="//powerpack.us15.list-manage.com/subscribe/post?u=17e6658e691ff88665ad7392e&amp;id=922aa303dd" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
              <div id="mc_embed_signup_scroll">
          <div class="indicates-required"><span class="asterisk">*</span> indicates required</div>
          <div class="mc-field-group">
            <label for="mce-NAME">Name </label>
            <input type="text" value="" name="NAME" class="" id="mce-NAME">
          </div>
          <div class="mc-field-group">
            <label for="mce-MMERGE3">Postcode </label>
            <input type="text" value="" name="MMERGE3" class="" id="mce-MMERGE3">
          </div>
          <div class="mc-field-group">
            <label for="mce-EMAIL">Email Address  <span class="asterisk">*</span>
          </label>
            <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL">
          </div>
            <div id="mce-responses" class="clear">
              <div class="response" id="mce-error-response" style="display:none"></div>
              <div class="response" id="mce-success-response" style="display:none"></div>
            </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
              <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_17e6658e691ff88665ad7392e_922aa303dd" tabindex="-1" value=""></div>

              <input type="hidden" name="SIGNUP" id="SIGNUP" value="<%= location_name %>" />

              <div class="clear"><input type="submit" value="Join" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
              </div>
          </form>
          </div>
          <!--End mc_embed_signup-->


      </div>
    </div>
  </div>
</div>

<div class="footer">
  <div class="container">
    <div class="row">
      <div class="col-8">
        <p>Any questions? Email <a href="mailto:sophy.colbert@coop.co.uk">sophy.colbert@coop.co.uk</a></p>
      </div>
      <div class="col-4">
        <%= image_tag 'coop-logo-white.svg' %>
      </div>
    </div>
  </div>
</div>

<script>
  mapboxgl.accessToken = 'pk.eyJ1IjoiaWFuZHJ5c2RhbGUiLCJhIjoiY2owY2xvdWJjMDAxaDMzbXp4cTRtMDY4cyJ9.C-j6LkLP4yyH8OqCieSdfA';
  var map = new mapboxgl.Map({
      container: 'map', // container id
      style: 'mapbox://styles/mapbox/streets-v9', //stylesheet location
      center: [<%= lon %>, <%= lat %>], // starting position
      zoom: 11 // starting zoom
  });

  map.scrollZoom.disable();
</script>

<script>
  var place_lookup = new Object();
  <% data.places.locations.each do |pack|  %>
      place_lookup["<%= pack[3] %>"] = "./<%= pack[0] %>.html";
  <% end %>
  $(function() {
    $("#place-form").submit(function() {
      var postcode = $("#place-input").val();
      console.log('postcode', postcode);

      $.each(place_lookup, function(fragment, dest) {
        if(postcode.startsWith(fragment)) {
          window.location.href = dest;
        }
      });
      return false;
    });
  });
</script>

<script type="text/javascript">
  window.Intercom("boot", {
